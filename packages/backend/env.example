# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/sui_faucet"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Sui Network Configuration
SUI_NETWORK="testnet"
SUI_PRIVATE_KEY="your_sui_private_key_here"
SUI_RPC_URL="https://fullnode.testnet.sui.io"
SUI_FAUCET_AMOUNT="1000000000" # 1 SUI in MIST (1 SUI = 10^9 MIST)

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=3
RATE_LIMIT_BLOCK_DURATION=3600000 # 1 hour

# JWT Configuration
JWT_SECRET="your_jwt_secret_here"
JWT_EXPIRES_IN="24h"

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH="./logs/app.log"

# Admin Configuration
ADMIN_EMAILS="admin1@example.com,admin2@example.com"

# Discord Bot Integration (Optional)
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/your_webhook_url"

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Security Configuration
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
TRUST_PROXY=true 