{
  "name": "sui-faucet-monorepo",
  "version": "1.0.0",
  "description": "A clean, reliable, and user-friendly Sui Testnet Faucet DApp",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:discord-bot\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "dev:discord-bot": "cd packages/discord-bot && npm run dev",
    "build": "npm run build:backend && npm run build:frontend && npm run build:discord-bot",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "build:discord-bot": "cd packages/discord-bot && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd packages/backend && npm run start",
    "start:frontend": "cd packages/frontend && npm run start",
    "start:discord-bot": "cd packages/discord-bot && npm run start",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "clean": "npm run clean:node_modules && npm run clean:dist",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:dist": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "lint": "npm run lint:backend && npm run lint:frontend && npm run lint:discord-bot",
    "lint:backend": "cd packages/backend && npm run lint",
    "lint:frontend": "cd packages/frontend && npm run lint",
    "lint:discord-bot": "cd packages/discord-bot && npm run lint",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd packages/backend && npm run test",
    "test:frontend": "cd packages/frontend && npm run test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "sui",
    "faucet",
    "testnet",
    "blockchain",
    "discord-bot",
    "web3",
    "typescript",
    "nextjs",
    "express"
  ],
  "author": "Sui Faucet Team",
  "license": "MIT"
} 